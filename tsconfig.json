{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"jsx": "react",
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "types",
		"emitDeclarationOnly": true,
		"lib": ["ESNext", "dom"]
	},
	"exclude": [
		"node_modules",
		"dist",
		"scripts",
		"webpack",
		"jest",
		"**/*.stories.tsx",
		"**/*.test.tsx"
	],
	"include": ["src"]
}
